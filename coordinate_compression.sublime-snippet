//coordinate compression
sort(all(coordinate));
coordinate.erase(unique(all(coordinate)), coordinate.end());

int m = coordinate.size();
map<int, int> mp;
for (int i = 0; i < m; i++)
    mp[coordinate[i]] = i;
]]></content>
