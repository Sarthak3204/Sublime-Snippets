int findCeil(Node* root, int x) {
    int ans = INT_MAX;
    while (root) {
        if (root->data >= x) {
            ans = min(ans, root->data);
            root = root->left;
        }
        else root = root->right;
    }

    return (ans < INT_MAX ? ans : -1);
}
]]></content>
